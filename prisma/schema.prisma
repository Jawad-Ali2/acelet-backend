generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserPreferences {
  id        String   @id @default(uuid())
  name      String
  level     String
  stream    String
  subjects  UserSubject[]
}

model Subject {
  id        String   @id @default(uuid())
  name      String
  level     String
  stream    String
  papers    Paper[]
  users     UserSubject[]
}

model UserSubject {
  id              String           @id @default(uuid())
  userId          String
  subjectId       String
  user            UserPreferences @relation(fields: [userId], references: [id])
  subject         Subject         @relation(fields: [subjectId], references: [id])

  @@unique([userId, subjectId])
}

model Paper {
  id          String   @id @default(uuid())
  subjectId   String
  year        Int
  season      String
  paperType   String
  fileURL     String
  fileSize    Int
  subject     Subject  @relation(fields: [subjectId], references: [id])
}
